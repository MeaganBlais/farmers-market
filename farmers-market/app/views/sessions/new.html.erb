<section class="sessions max-width-container">

  <header class="page-header">
    <h1>Sign in!</h1>
  </header>

  <article class="sessions-detail">

    <div class="row">
      <div class="col-md-12">
        <%= form_tag '/sessions' do %>
          <div class="form-group">
            <div class="control-label col-md-2">
              <%= label_tag :email%>
            </div>
            <div class="col-md-8">
              <%= text_field_tag :email, params[:email] %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-md-2">
              <%= label_tag :password%>
            </div>
            <div class="col-md-8">
              <%= password_field_tag :password, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <%= submit_tag "Log in", class: "btn btn-primary btn-lg btn-xlarge" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </article>

</section>
